<resources>
    <string name="app_name">Main screen</string>
    <string-array name="city_array">
        <item>Seoul</item>
        <item>Busan</item>
        <item>Jeju</item>
    </string-array>

    <!-- Base Style 정의 -->
    <style name="BaseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <style name="CustomRelativeLayout" parent="BaseStyle">
            <item name="android:background">@drawable/button_design</item>
            <item name="android:orientation">vertical</item>
    </style>

        <!-- Define a style for the HorizontalScrollView -->
    <style name="CustomHorizontalScrollView">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">200dp</item>
    </style>

        <!-- Define a style for the inner LinearLayout inside HorizontalScrollView -->
    <style name="CustomInnerLinearLayout" parent="BaseStyle">
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="RelativeLayoutInHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

        <!-- Define a style for the ImageView -->
    <style name="CustomImageView">
            <item name="android:layout_width">250dp</item>
            <item name="android:layout_height">200dp</item>
            <item name="android:background">@drawable/round</item>
            <item name="android:scaleType">centerCrop</item>
            <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="ImageInBook">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

        <!-- Define a style for the TextView -->
    <style name="CustomTextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginTop">10dp</item>
            <item name="android:textColor">#000000</item>
            <item name="android:textSize">20sp</item>
            <item name="android:fontFamily">casual</item>
            <item name="android:layout_marginLeft">10dp</item>
            <item name="android:layout_below">@id/scrollView</item>
    </style>

    <style name="TextviewInBook">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ButtonInBook">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:backgroundTint">#E6E6FA</item>
    </style>


</resources>